                 ,      singletons              == 0.8.*
                 ,      sized-vector            == 1.2.*
                 ,      tagged                  == 0.6.*
                 ,      hybrid-vectors
                 ,      text                    == 0.11.*
                 ,      type-natural            == 0.0.6.*
                 ,      unamb                   == 0.2.*
                 ,      unordered-containers    == 0.2.*
                 ,      vector                  == 0.10.*
                 ,      sparse                  == 0.7.*
    exposed-modules: Algebra.Algorithms.Groebner
                     Algebra.Algorithms.Groebner.Monomorphic
                     Algebra.Algorithms.ZeroDim
                     Algebra.Ring.Noetherian
                     Algebra.Ring.Polynomial
                     Algebra.Ring.PolynomialAccumulated
                     Algebra.Ring.Polynomial.Quotient
                     Algebra.Ring.Polynomial.Monomorphic
                     Algebra.Ring.Polynomial.Parser
                     Algebra.Scalar
                     Algebra.Internal
                     Algebra.Instances
                     Algebra.Wrapped
                     Algebra.Matrix
    other-modules:   Algebra.Algorithms.FGLM
    exposed: True
    buildable: True
    ghc-options: -fwarn-name-shadowing -threaded

executable solve
    main-is: solve.hs
    if flag(examples)
        buildable: True
    else
        buildable: False
    hs-source-dirs: share examples
    build-depends:        algebra               ==3.1.*
                 ,        base                  >=2.0 && <5
                 ,        type-natural          ==0.0.6.*
                 ,        algebra               ==3.1.*
                 ,        computational-algebra
                 ,        random                ==1.0.*
                 ,        hmatrix               ==0.15.0.1
                 ,        matrix                >= 0.2.4.0
                 ,        sized-vector          ==1.2.*
                 ,        vector                ==0.10.*
                 ,        convertible           ==1.0.*
                 ,        lens
                 ,        MonadRandom           ==0.1.*
    ghc-options: -caf-all -auto-all -rtsopts -O2 -threaded


