                 ,      equational-reasoning    == 0.0.1.*
                 ,      hashable                == 1.1.*
                 ,      heaps                   == 0.3.*
                 ,      hmatrix                 == 0.15.0.1
                 ,      matrix                  >= 0.2.4.0
                 ,      lens                    == 3.9.*
